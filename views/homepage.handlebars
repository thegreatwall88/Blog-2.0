{{#each posts}}
<div class="post">
    <a href="/post/{{id}}" class="post-link">
    <div class="post-header">
            <h1 class = "post-title">{{title}}</h1>
            <span class="post-date">Posted by {{user.name}} on {{created_at}}</span>
     </div>
        
    </a>
    <p>{{content}}</p>
</div>
{{/each}}
